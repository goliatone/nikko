#!/usr/bin/env node

var program = require('commander');

program
  .option('-f, --force', 'force installation')
  .parse(process.argv);

var pkgs = program.args;

if (!pkgs.length) {
  console.error('packages required');
  process.exit(1);
}

//TODO: we could create this dynamically? Or process the content
//and change it with regexp so that it works also as standalone?
var nikko = require('../lib');
nikko.execute('install', {
    packages: pkgs,
    installDir:nikko.pluginPath
});