#!/usr/bin/env node


/**
 * Dependencies
 */
var chalk = require('chalk');

var nikko = require('..');
var program = require('commander');

var pkg = require('../package.json');

var plugins = {
    "plugins":[
        {"name": 'create', "description": ['create [name]', 'Create new blog']},
        {"name": 'new', "description":['new [name]', 'Create new post']},
        {"name": 'serve', "description":['serve', 'Serve']},
        {"name": 'build', "description":['build', 'Build']},
        {"name": 'publish', "description":['publish', 'Publish the package']},
        {"name": 'install', "description":['install', 'Install plugin']},
        {"name": 'list', "description":['list', 'List plugin']}
    ]
};

/**
 * Usage
 */
program.version(pkg.version);

plugins.plugins.forEach(function(plg){
    var command = plg.description;
    program.command.apply(program, command);
});

program.option('-c, --config <path>', 'configuration file location', 'librarian.json');

/**
 * Examples
 */
program.on('--help', function(){
    console.log('\tExamples:');
    console.log();
    console.log('\t#build from librarian.json:');
    console.log('\t$ lbr');
    console.log();
    console.log('\t#build from lib/config.json:');
    console.log('\t$ nikko build --config lib/config.json');
    console.log();
});

/**
 * Parse
 */
program.parse(process.argv);


/////////////////////////////////////////////////////////////////
/// HELPER METHODS
/////////////////////////////////////////////////////////////////

function fatal(msg, stack){
    console.error();
    console.error(chalk.red('\tLibrarian') + chalk.gray(': ') + msg);
    if(stack){
        console.error();
        console.error(chalk.gray(stack));
    }
    console.error();
    process.exit(1);
}

function log(msg){
    console.log();
    console.log(chalk.gray('\tLibrarian: ') + msg);
    console.log();
}
