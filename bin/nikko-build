#!/usr/bin/env node

var program = require('commander');
var build = require('../lib/nikko-build');

program
  .option('-f, --force', 'force build')
  .option('-s, --source [directory]', 'Source directory')
  .parse(process.argv);

// https://github.com/lelandmiller/metalsmith-external-watch/blob/master/index.js
// https://github.com/queckezz/watch-run/blob/master/bin/watch
build({
    force: program.force,
    source: program.source
});