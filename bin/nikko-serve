#!/usr/bin/env node

var program = require('commander');
var server = require('../lib/nikko-serve');

program
  .option('-p, --port [port]', 'Server port', 3000)
  .option('-w, --watch', 'Reload on changes')
  .option('-o, --open', 'Open browser', true)
  .option('-d, --directory [directory]', 'Serve directory', process.env.PWD)
  .parse(process.argv);

server({
    port: program.port,
    watch: program.watch,
    directory: program.directory
});